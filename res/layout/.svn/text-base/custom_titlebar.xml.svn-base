<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_action_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#E6E7E8"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E6E7E8" >

        <RelativeLayout
            android:id="@+id/iconWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/toggleMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_drawer28x28"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titlebarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/toggleMenu"
                android:src="@drawable/socialalert_titlebar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titlebarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iconWrapper"
            android:layout_toLeftOf="@+id/rightIcons"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightIcons"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/title_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:padding="5dp"
                android:src="@drawable/delete"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_addcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/add"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_clientlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/client_logo"
                android:visibility="gone" />
        
        </LinearLayout>
        <!--
             <Button
                android:id="@+id/btnChgPsw_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="Change password"
                android:background="#10b1e5"
                android:textColor="#ffffff" 
                android:visibility="gone"/>
        -->

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/lauren" />

</RelativeLayout>