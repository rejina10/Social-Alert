<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <item name="android:textColor">#000000</item>
        <item name="android:windowTitleSize">75dip</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--
        <style name="spinner_style" parent="@android:style/Widget.Spinner">
            <item name="android:background">@drawable/gradient_spinner</item>
            
        </style>
    -->

    <style name="AppBaseThemeLight" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseThemeLight">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="loginTheme" parent="Theme.Sherlock">
        <item name="actionBarSize">0dp</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="applicationTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#00ff00</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>